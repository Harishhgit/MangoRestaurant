@model IEnumerable<Mango.Web.Models.ProductDto> 
<br />
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-success">Products List</h1>

        </div>
        <div class="col text-end pt-1">
            <a asp-action="ProductCreate" class="btn btn-outline-primary"><i class="fa fa-plus"></i> Create New Product</a>
        </div>
        
    </div>


    <table class="table">

        <thead>
            <tr>
                <th>Name</th>
                <th>Category Name</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>


        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.CategoryName</td>
                    @* <td>@((item.Price).ToString("c"))</td> *@
                    <td>&#8377; @item.Price</td>
                    <td>
                        <a asp-action="ProductEdit" class="btn btn-success" asp-route-productid="@item.ProductId">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-action="ProductDelete" class="btn btn-danger" asp-route-productid="@item.ProductId">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>



@section Scripts {

    @if (TempData["CreateMessage"] != null)
    {
        <script type="text/javascript">
            toastr.success('@TempData["CreateMessage"]');
        </script>
    }
    @if (TempData["EditMessage"] != null)
    {
        <script type="text/javascript">
            toastr.success('@TempData["EditMessage"]');
        </script>
    }
    @if (TempData["DeleteMessage"] != null)
    {
        <script type="text/javascript">
            toastr.error('@TempData["DeleteMessage"]');
        </script>
    }
}